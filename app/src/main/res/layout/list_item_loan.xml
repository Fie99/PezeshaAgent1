<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/main_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textAppearance="@style/TextAppearance.PezeshaAgent.Subtitle1"
        android:textColor="@color/secondary_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_loan_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- KSH 187,000"
        android:textColor="@color/error_color"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_customer_name"
        app:drawableEndCompat="@drawable/baseline_arrow_right_24"
        app:drawableTint="@color/secondary_color" />

    <TextView
        android:id="@+id/tv_loan_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ksh 300,000"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_name"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>