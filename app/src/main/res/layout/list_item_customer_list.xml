<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer name"
        android:textAppearance="@style/TextAppearance.PezeshaAgent.Subtitle1"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_customer"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business name"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_customer"
        app:layout_constraintTop_toBottomOf="@id/tv_customer_name"/>
    <TextView
        android:id="@+id/tv_customer_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:drawablePadding="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_customer_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableEnd="@drawable/baseline_arrow_right_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>