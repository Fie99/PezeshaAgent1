<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_margin"
    tools:context=".ui.auth.welcome.WelcomeFragment">

    <TextView
        android:id="@+id/tv_onboard_heading"
        style="@style/TitleText"
        android:text="@string/onboard_heading"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/main_margin"
        android:layout_marginEnd="@dimen/main_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_onboard_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/main_margin"
        android:src="@drawable/ic_apply_for_loan"
        app:layout_constraintEnd_toEndOf="@id/tv_onboard_heading"
        app:layout_constraintStart_toStartOf="@id/tv_onboard_heading"
        app:layout_constraintTop_toBottomOf="@id/tv_onboard_heading"
        android:importantForAccessibility="no" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_onboard_image"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginStart="@dimen/main_margin"
        android:layout_marginEnd="@dimen/main_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/get_started" />

</androidx.constraintlayout.widget.ConstraintLayout>
